@{
    ViewData["Title"] = "Home Page";
}
@model List<Team>


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
   <table class="table table-striped">
       <thead>
           <tr>
                <th>
                  
               </th>
                <th>
                   Team Name
               </th>
           </tr>
       </thead>
       <tbody>@foreach(var row in Model)
            {
                @if (row.Name_en != "--")
                {
                    <tr>
                        <td> <img src="@row.Flag" /> </td>
                        <td>@row.Name_en</td>
                    </tr>
                    
                }             
            }

       </tbody>
   </table>
</div>
