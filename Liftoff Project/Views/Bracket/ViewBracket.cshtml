@model Liftoff_Project.ViewModels.AddBracketViewModel
@{
    
    var n = 0;
}

<h1>View Your Bracket(s)!</h1>


<form id="myform" asp-controller="Bracket" asp-action="ViewBracket" method="get">

    @for (int i = 0; i < 4; i++)
    {

        <div>


            <div class="round r-of-4">
                <div class="bracket-game">
                    <div class="player top ">
                        <p>@ViewBag.MyBrackets1[0][i]</p>

                        @* <div class="score">
                    3
                    </div>*@
                    </div>
                    <div class="player bot ">
                        <p>@ViewBag.Mybrackets1[1][i]</p>
                        @* <div class="score">
                    1
                    </div>*@
                    </div>
                    @**@
                </div>
                <div class="bracket-game cont">
                    <div class="player top ">
                        <p>@ViewBag.MyBrackets1[2][i]</p>
                        @* <div class="score">
                    0
                    </div>*@
                    </div>
                    <div class="player bot ">
                        <p>@ViewBag.MyBrackets1[3][i]</p>
                        @*<div class="score">
                    3
                    </div>*@
                    </div>

                </div>
            </div>


            <div class="connectors r-of-2">
                <div class="top-line"></div>
                <div class="clear"></div>
                <div class="bottom-line"></div>
                <div class="clear"></div>
                <div class="vert-line"></div>
                <div class="clear"></div>
                <div class="next-line"></div>
                <div class="clear"></div>
            </div>
            <div class="round r-of-2">
                <div class="bracket-game">
                    <div class="player top ">
                        <p>@ViewBag.MyBrackets1[4][i]</p>
                        @* <div class="score">
                    2
                    </div>*@
                    </div>
                    <div class="player bot ">
                        <p>@ViewBag.MyBrackets1[5][i]</p>
                        @* <div class="score">
                    3
                    </div>*@
                    </div>
                </div>
            </div>
            <div class="connectors r-of-2">
                <div class="top-line"></div>
                <div class="clear"></div>
                <div class="bottom-line"></div>
                <div class="clear"></div>
                <div class="vert-line"></div>
                <div class="clear"></div>
                <div class="next-line"></div>
                <div class="clear"></div>
            </div>
        </div> @*TEST DIV ENDS HERE!!!!!*@
        <div class="round semi-finals">
            <div class="bracket-game">
                <div class="player top">
                    <p>@ViewBag.MyBrackets1[6][i]</p>
                </div>
            </div>
        </div>
        @if (i != 1 && i != 3)
        {
            
            <div class="round finals">
                <div class="bracket-game">
                    <div class="player top">
                        <p>@ViewBag.MyBrackets1[7][n]</p>
                        @{n = n + 1;}
                    </div>
                </div>
            </div>
            @if (i == 2)
            {
                <div class="round winner">
                    <div class="bracket-game">
                        <div class="player top">
                            <p>@ViewBag.MyBrackets1[8][0]</p>
                        </div>
                    </div>
                </div>
            }

        }
        <div class="clear"></div>



        @*Winner dropmenu starts here*@
    }


</form>