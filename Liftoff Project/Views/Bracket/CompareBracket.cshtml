@model Liftoff_Project.Controllers.BracketController
@{

    var n = 0;
}

    <h1>Compare Your Bracket(s)</h1>

<form id="myform" asp-controller="Bracket" asp-action="ViewBracket" method="get">

    @for (int i = 0; i < 4; i++)
    {

        <div>


            <div class="round r-of-4">
                <div class="bracket-game">
                    <div class="player top ">
                        <p>@ViewBag.BracketTeams[0][i]</p>

                        @* <div class="score">
                    3
                    </div>*@
                    </div>
                    <div class="player bot ">
                        <p>@ViewBag.BracketTeams[1]</p>
                        @* <div class="score">
                    1
                    </div>*@
                    </div>
                    @**@
                </div>
                <div class="bracket-game cont">
                    <div class="player top ">
                        <p>@ViewBag.BracketTeams[2]</p>
                        @* <div class="score">
                    0
                    </div>*@
                    </div>
                    <div class="player bot ">
                        <p>@ViewBag.BracketTeams[3]</p>
                        @*<div class="score">
                    3
                    </div>*@
                    </div>

                </div>
            </div>


            <div class="connectors r-of-2">
                <div class="top-line"></div>
                <div class="clear"></div>
                <div class="bottom-line"></div>
                <div class="clear"></div>
                <div class="vert-line"></div>
                <div class="clear"></div>
                <div class="next-line"></div>
                <div class="clear"></div>
            </div>
            <div class="round r-of-2">
                <div class="bracket-game">
                    <div class="player top ">
                        <p>@ViewBag.BracketTeams[4]</p>
                        @* <div class="score">
                    2
                    </div>*@
                    </div>
                    <div class="player bot ">
                        <p>@ViewBag.BracketTeams[5]</p>
                        @* <div class="score">
                    3
                    </div>*@
                    </div>
                </div>
            </div>
            <div class="connectors r-of-2">
                <div class="top-line"></div>
                <div class="clear"></div>
                <div class="bottom-line"></div>
                <div class="clear"></div>
                <div class="vert-line"></div>
                <div class="clear"></div>
                <div class="next-line"></div>
                <div class="clear"></div>
            </div>
        </div> @*TEST DIV ENDS HERE!!!!!*@
        <div class="round semi-finals">
            <div class="bracket-game">
                <div class="player top">
                    <p>@ViewBag.BracketTeams[6]</p>
                </div>
            </div>
        </div>
        @if (i != 1 && i != 3)
        {

            <div class="round finals">
                <div class="bracket-game">
                    <div class="player top">
                        <p>@ViewBag.BracketTeams[7][n]</p>
                        @{
                            n = n + 1;
                        }
                    </div>
                </div>
            </div>
            @if (i == 2)
            {
                <div class="round winner">
                    <div class="bracket-game">
                        <div class="player top">
                            <p>@ViewBag.BracketTeams[22]</p>
                        </div>
                    </div>
                </div>
            }

        }
        <div class="clear"></div>



        @*Winner dropmenu starts here*@
    }


</form>
