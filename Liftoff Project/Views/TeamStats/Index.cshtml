@model List<TeamGroupStandings>

<h1 class="text-center">Team Standings</h1>

<div class="alert-dark">
    @foreach(var group in Model)
    {
        <h2>Group: @group.Group</h2>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Team Name</th>
                    <th>Matches Played</th>
                    <th>Matches Lost</th>
                    <th>Point / Score</th>
                    <th>Goals for</th>
                    <th>Goals Against</th>
                    <th>Goals Difference</th>
                    <th>Drawn</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var team in group.Teams)
                {
                    <tr>
                        <td>@team.Name_en</td>
                        <td>@team.Mp</td>
                        <td>@team.W</td>
                        <td>@team.L</td>
                        <td>@team.Pts</td>
                        <td>@team.Ga</td>
                        <td>@team.Gd</td>
                        <td>@team.D</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<button id="topBtn" class="topBtn" style="background-color: transparent"><img style="background-color: transparent;" src="https://www.pngkey.com/png/full/602-6025868_up-light-blue-up-arrow.png" width="50" height="50" /></button>

<script>
    let toTopBtn = document.getElementById("topBtn");

    window.onscroll = function () { scrollFunction() };

    function scrollFunction() {
        if (document.documentElement.scrollTop > 20 || document.body.scrollTop > 20) {
            toTopBtn.style.display = "block";
        } else {
            toTopBtn.style.display = "none";
        }
    }
    toTopBtn.addEventListener("click", topFunction);
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>