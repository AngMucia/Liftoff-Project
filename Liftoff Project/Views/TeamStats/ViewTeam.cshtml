@model Team;
<div class="text-center alert-dark">
<h1>@Model.Name_en</h1>
<img src="@Model.Flag"/>
</div>

<div class="alert-dark text-center">
    <h3>Overall Stats</h3>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Goals</th>
                <th>Fouls Comitted</th>
                <th>Yellow Card</th>
                <th>Red Card</th>
                <th>Offsides</th>
                <th>Won Corners</th>
                <th>Saves</th>
                <th>Total Shots</th>
                <th>Penalty Kick Goals</th>
                <th>Penalty Kick Shots</th>
                <th>Total Passes</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@ViewBag.goals</td>
                <td>@ViewBag.teamStats.FoulsCommitted</td>
                <td>@ViewBag.teamStats.YellowCards</td>
                <td>@ViewBag.teamStats.RedCards</td>
                <td>@ViewBag.teamStats.Offsides</td>
                <td>@ViewBag.teamStats.WonCorners</td>
                <td>@ViewBag.teamStats.Saves</td>
                <td>@ViewBag.teamStats.TotalShots</td>
                <td>@ViewBag.teamStats.PenaltyKickGoals</td>
                <td>@ViewBag.teamStats.PenaltyKickShots</td>
                <td>@ViewBag.teamStats.TotalPasses</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="alert-dark">
    <h3 class="text-center">Games Team Had</h3>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Home</th>
                <th>Away</th>
                <th>Home Goals</th>
                <th>Away Goals</th>
                <th>Date Played</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var match in ViewBag.matches)
            {
                <tr>
                    <td>@match.Home_team_en</td>
                    <td>@match.Away_team_en</td>
                    <td>@match.Home_Score</td>
                    <td>@match.Away_Score</td>
                    <td>@match.Local_date</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="alert-dark">
    <h3 class="text-center">Players</h3>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in ViewBag.players)
            {
                <tr>
                    <td>
                        <a class="btn btn-secondary" asp-controller="TeamStats" asp-action="ViewPlayer" asp-route-playerId="@player.Id">@player.Name</a>
                    </td>
                    <td>@player.Jersey</td>
                    <td>@player.Position</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<button id="topBtn" class="topBtn" style="background-color: transparent"><img style="background-color: transparent;" src="https://www.pngkey.com/png/full/602-6025868_up-light-blue-up-arrow.png" width="50" height="50" /></button>

<script>
    let toTopBtn = document.getElementById("topBtn");

    window.onscroll = function () { scrollFunction() };

    function scrollFunction() {
        if (document.documentElement.scrollTop > 20 || document.body.scrollTop > 20) {
            toTopBtn.style.display = "block";
        } else {
            toTopBtn.style.display = "none";
        }
    }
    toTopBtn.addEventListener("click", topFunction);
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>
